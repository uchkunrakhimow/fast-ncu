{
  "name": "fast-ncu",
  "version": "1.0.14",
  "description": "fncu - A blazing-fast CLI tool for checking npm package updates",
  "type": "module",
  "bin": {
    "fncu": "./bin/fncu.ts",
    "fast-ncu": "./bin/fncu.ts"
  },
  "files": [
    "dist",
    "lib",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run bin/fncu.ts",
    "dev:watch": "bun --watch bin/fncu.ts",
    "build": "bun build bin/fncu.ts --outfile=dist/fncu.js --target=node",
    "test": "bun test",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "npm",
    "package",
    "updates",
    "cli",
    "semver",
    "registry",
    "dependency",
    "version",
    "update-checker",
    "fast"
  ],
  "author": "Uchkun Rakhimov <uchkunrakhimov@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uchkunrakhimow/fast-ncu.git"
  },
  "homepage": "https://github.com/uchkunrakhimow/fast-ncu#readme",
  "bugs": {
    "url": "https://github.com/uchkunrakhimow/fast-ncu/issues"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "colorette": "^2.0.20",
    "ora": "^9.0.0",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/semver": "^7.7.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22"
  }
}
