{
  "name": "fast-ncu",
  "version": "1.0.8",
  "description": "fncu - A blazing-fast CLI tool for checking npm package updates",
  "type": "module",
  "bin": {
    "fncu": "./bin/fncu.ts",
    "fast-ncu": "./bin/fncu.ts"
  },
  "files": [
    "bin/**/*",
    "lib/**/*",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run bin/fncu.ts",
    "dev:watch": "bun run --hot bin/fncu.ts",
    "build": "bun build bin/fncu.ts --outdir=dist --target=node",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "start": "bun run bin/fncu.ts",
    "version:patch": "npm version patch && npm publish",
    "version:minor": "npm version minor && npm publish",
    "version:major": "npm version major && npm publish",
    "prepublish": "bun run build && bun test"
  },
  "keywords": [
    "npm",
    "package",
    "updates",
    "cli",
    "semver",
    "registry"
  ],
  "author": "Uchkun Rakhimov <uchkunrakhimov@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.1",
    "colorette": "^2.0.20",
    "ora": "^9.0.0",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/semver": "^7.7.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22"
  }
}
